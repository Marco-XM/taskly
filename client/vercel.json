{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",        // Matches all routes
        "dest": "/index.html"  // Redirects all routes to index.html
      }
    ]
  }
  